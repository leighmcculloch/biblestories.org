---
page_classes: story side-menu-container
---

- content_for(:title, "Great Stories | #{story.title}")

.side-menu-view-container
  .view
    .header
      .item.menu
        %i.icon-menu.toggle-side-menu
      .item.controls
        %span.control.zoom-smaller= t(:story_text_smaller)
        %span.control.zoom-larger= t(:story_text_larger)
        %span.separator= "|"
        %span.control.toggle-verses.verses-short= t(:story_verses_short)
        %span.control.toggle-verses.verses-long= t(:story_verses_long)
        %span.separator= "|"
        %span.control.audio-label= t(:audio_label)
        %span.control.audio
          %i.icon-volume-up

    .story
      .title
        %i.logo.icon-leaf
        %h1= story.title
        %h2
          - if story.author
            = t(:story_written_by)
            %span.author= story.author + "*"
            = t(:story_in)
          %a.bible_ref{:href=>story.read_more_url}
            = story.bible_ref
      - if story.audio_info && story.audio_info.length == 1
        .audio-player{:style=>"display:none;"}
          - story.audio_info.each do |audio_info|
            %audio{:controls=>"controls", :preload=>"none"}
              %source{:src=>audio_info[:url], :type=>"audio/mpeg"}
      .text= story.text_html
      .call-to-action
        .item.share= partial "share-bar"
        .item.read-more
          %a{:href=>story.read_more_url}
            = t(:story_read_more, :bible_ref=>story.bible_ref)
        .item.more-stories
          %a{:href=>"../"}
            = t(:story_find_other_great_stories_in_the_bible)

    .footer
      - if story.author
        %div
          = "*"
          = t(:story_author_disclaimer, :title=>story.title, :author=>story.author)
      %div= story.text_copyright
      %div= story.audio_copyright
      %div= t(:created_by)

= partial "side-menu", :locals => { :active_story => story }