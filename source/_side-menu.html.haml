.side-menu
  .item.title
    %i.close.toggle-side-menu.icon-menu.padded-click-square-buttons
    %i.logo.icon-leaf
    %a{:href=>"../"}
      %h1= t(:title)
  %i.share-pointer.fa.fa-caret-left
  .item.share
    = partial "share-bar"
  .item
    .search
      .search-box
        %form
          %input.query{:type=>"text", :placeholder=>t(:search_placeholder_side_menu)}
          %i.toggle-side-menu-and-search.icon-search
    .stories
      - Stories.all.each do |_, story|
        .story{:class => ("current" if story.short_url == active_story.short_url), :data => story.as_json}
          - if story.short_url == active_story.short_url
            %i.marker.icon-leaf
          %a{:href=>"../#{story.short_url}/"}= story.title
          .bible_ref= story.bible_ref
    .search-no-results= t(:search_no_results)